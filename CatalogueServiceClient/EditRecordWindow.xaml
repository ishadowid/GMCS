<Window x:Class="CatalogueServiceClient.EditRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:CatalogueServiceClient.Properties"
        Title="EditRecordWindow" Height="85.239" Width="511.776">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" IsEnabled="{Binding IsNewRecord}" Text="{Binding Name}" VerticalAlignment="Top" Width="203"  />
        <TextBox HorizontalAlignment="Left" Height="24" Margin="218,10,0,0" Text="{Binding PhoneNumber}" VerticalAlignment="Top" Width="199"/>
        <Button Content="{x:Static p:Resources.EditButtonText}" HorizontalAlignment="Left" Margin="422,10,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="Button_Click"/>

    </Grid>
</Window>
